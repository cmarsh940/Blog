<div class="text-center">
	<h2><%= @category.name %></h2>
</div>
<div class="text-left">
  <button type="button" class="btn-primary"><a href="/">Back</a></button>
</div>
<div class="container">
  <div class="col-1"></div>
  <% unless @category.posts.empty? %>
    <% @category.posts.each do |post| %>
      <div class="row">
        <div class="card md-4">
          <%= link_to post_path(post) do %>
          	<%= image_tag post.image, class: 'card-img-top' %>
            <div class="card-body">
              <h4 class="card-title text-center"><%= post.title %></h4>
              <p class="card-text"><%= post.overview %></p>
              <div class="card-footer">
                <p class="card-text"><small class="text-muted">Date posted: <%= post.created_at %></small></p>
                <div class="text-right">
                  <button type="button" class="btn-sm btn-primary text-right">Read more ></button>
                </div>
              </div>
            </div>
        	<% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h4>Sorry!  There are no post for this category</h4>
	<% end %>
  <div class="col-1"></div>
</div>
